<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FamilyFinance.ViewModels"
             x:Class="FamilyFinance.Views.ExportPage"
             Title="Export JSON">

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Export All Button -->
        <Button Grid.Row="0"
                Text="Export All"
                Command="{Binding ExportAllCommand}"
                BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="44"
                FontSize="15"
                FontAttributes="Bold"
                Margin="16,16,16,8" />

        <!-- Status Message -->
        <Frame Grid.Row="1"
               IsVisible="{Binding IsStatusVisible}"
               Margin="16,0,16,8" Padding="10"
               BackgroundColor="#E8F5E9"
               CornerRadius="8" HasShadow="False">
            <Label Text="{Binding StatusMessage}"
                   FontSize="14"
                   TextColor="Green"
                   HorizontalTextAlignment="Center" />
        </Frame>

        <!-- People List -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding People}">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                    <Label Text="No people to export" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" />
                    <Label Text="Add people first in the People section" FontSize="14" TextColor="LightGray" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:PersonExportDisplay">
                    <Frame Margin="16,4" Padding="12"
                           BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                           CornerRadius="10" HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                            <!-- Person Info -->
                            <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                                <Label Text="{Binding PersonName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding AccountCount, StringFormat='{0} account(s)'}"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </VerticalStackLayout>

                            <!-- Export Button -->
                            <Button Grid.Column="2"
                                    Text="JSON"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExportViewModel}}, Path=ExportPersonCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="36"
                                    FontSize="13"
                                    FontAttributes="Bold" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
