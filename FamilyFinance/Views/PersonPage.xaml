<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FamilyFinance.ViewModels"
             xmlns:helpers="clr-namespace:FamilyFinance.Helpers"
             x:Class="FamilyFinance.Views.PersonPage"
             Title="People">

    <ContentPage.Resources>
        <helpers:Base64ToImageConverter x:Key="Base64ToImageConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">

        <!-- People List -->
        <CollectionView Grid.Row="0"
                        ItemsSource="{Binding People}"
                        SelectionMode="Single"
                        SelectionChanged="OnPersonSelected">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                    <Label Text="No people yet" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" />
                    <Label Text="Tap + to add someone" FontSize="14" TextColor="LightGray" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:PersonDisplay">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PersonViewModel}}, Path=DeletePersonCommand}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="16,4" Padding="12"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                               CornerRadius="10" HasShadow="True">
                            <Grid ColumnDefinitions="56,*,Auto" ColumnSpacing="12">
                                <!-- Photo -->
                                <Frame WidthRequest="48" HeightRequest="48"
                                       CornerRadius="24" Padding="0"
                                       IsClippedToBounds="True"
                                       HorizontalOptions="Center" VerticalOptions="Center">
                                    <Image Source="{Binding Person.PhotoBase64, Converter={StaticResource Base64ToImageConverter}}"
                                           Aspect="AspectFill"
                                           WidthRequest="48"
                                           HeightRequest="48" />
                                </Frame>

                                <!-- Name and Email -->
                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                    <Label Text="{Binding Person.Name}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation" />
                                    <Label Text="{Binding Person.Email}"
                                           FontSize="12"
                                           TextColor="Gray"
                                           LineBreakMode="TailTruncation" />
                                </VerticalStackLayout>

                                <!-- Account Count -->
                                <Frame Grid.Column="2"
                                       BackgroundColor="{AppThemeBinding Light=#E8E8E8, Dark=#333333}"
                                       CornerRadius="12" Padding="8,4"
                                       VerticalOptions="Center" HasShadow="False">
                                    <Label Text="{Binding AccountCount, StringFormat='{0} accounts'}"
                                           FontSize="11"
                                           TextColor="Gray" />
                                </Frame>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- FAB -->
        <Button Grid.Row="1"
                Text="+"
                FontSize="28"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                TextColor="White"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,20,20"
                Command="{Binding GoToAddPersonCommand}"
                Shadow="{OnPlatform Default={Shadow Brush=Black, Offset='2,4', Radius=8, Opacity=0.3}}" />
    </Grid>

</ContentPage>
